{
  "name": "mern-ts-boilerplate-server",
  "version": "1.0.0",
  "description": "Boiler plate for server.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "start": "npm run serve",
    "serve": "ts-node src/index.ts",
    "test": "(echo \"Testing core\" && NODE_ENV=test mocha --exit -r  ts-node/register src/**/*.spec.ts); (echo \"Testing apps\" && NODE_ENV=test mocha --exit -r ts-node/register src/apps/**/*.spec.ts)"
  },
  "keywords": [],
  "author": "Siddharth Joshi",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.4",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^14.14.9",
    "@types/nodemon": "^1.19.0",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/passport": "^1.0.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongodb": "^3.6.3",
    "passport": "^0.4.1",
    "uuid": "^8.3.1"
  }
}
